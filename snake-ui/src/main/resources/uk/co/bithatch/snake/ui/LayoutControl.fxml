<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="layout" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.co.bithatch.snake.ui.LayoutControl">
   <center>
      <StackPane fx:id="layoutContainer" />
   </center>
   <top>
      <BorderPane fx:id="top" BorderPane.alignment="CENTER">
         <bottom>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Hyperlink fx:id="customise" onAction="#evtCustomise" text="%customise" />
                  <Hyperlink fx:id="addCustom" onAction="#evtAddCustom" text="%addCustom" />
                  <Hyperlink fx:id="removeCustom" onAction="#evtRemoveCustom" text="%removeCustom" />
               </children>
            </HBox>
         </bottom></BorderPane>
   </top>
   <left>
      <Hyperlink fx:id="pageLeft" onAction="#evtPageLeft" styleClass="mediumIcon" text="%pageLeft" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Hyperlink fx:id="pageRight" onAction="#evtPageRight" styleClass="mediumIcon" text="%pageRight" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
