									    <height>32</height>
								    </output>
								    <output>
									    <path>{name}48{ext}</path>
									    <format>png</format>
									    <width>48</width>
									    <height>48</height>
								    </output>
								    <output>
									    <path>{name}64{ext}</path>
									    <format>png</format>
									    <width>64</width>
									    <height>64</height>
								    </output>
								    <output>
									    <path>{name}96{ext}</path>
									    <format>png</format>
									    <width>96</width>
									    <height>96</height>
								    </output>
								    <output>
									    <path>{name}128{ext}</path>
									    <format>png</format>
									    <width>128</width>
									    <height>128</height>
								    </output>
								    <output>
									    <path>{name}256{ext}</path>
									    <format>png</format>
									    <width>256</width>
									    <height>256</height>
								    </output>
								    <output>
									    <path>{name}512{ext}</path>
									    <format>png</format>
									    <width>512</width>
									    <height>512</height>
								    </output>
							    </outputs>
						    </configuration>
					    </execution>
				    </executions>
			    </plugin>
            </plugins>
        </build>
      </profile>
    </profiles>
	<pluginRepositories>
		<pluginRepository>
			<id>svg-rasterizer-maven-plugin-mvn-repo</id>
			<url>https://raw.githubusercontent.com/Argelbargel/svg-rasterizer-maven-plugin/mvn-repo/</url>
		</pluginRepository>
	</pluginRepositories>
	<name>Snake - User Interface</name>
	<description>The main bulk of the Snake app that provides a JavaFX based user interface.</description>
</project>
