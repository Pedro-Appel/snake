		<dependency>
			<groupId>com.sshtools</groupId>
			<artifactId>icon-generator-javafx</artifactId>
			<version>1.2</version>
		</dependency>
	</dependencies>
    <profiles>
      <profile>
        <activation>
            <property>
                <name>rasterize</name>
            </property>
        </activation>
        <build>
            <plugins>
			    <plugin>
				    <groupId>argelbargel.maven</groupId>
				    <artifactId>svg-rasterizer-maven-plugin</artifactId>
				    <version>1.1-SNAPSHOT</version>
				    <executions>
					    <execution>
						    <id>rasterize-devices</id>
						    <phase>process-resources</phase>
						    <goals>
							    <goal>rasterize-directory</goal>
						    </goals>
						    <configuration>
							    <inputDir>src/main/svg/devices</inputDir>
							    <destDir>src/main/resources/uk/co/bithatch/snake/ui/devices</destDir>
							    <outputs>
								    <output>
									    <path>{name}16{ext}</path>
									    <format>png</format>
									    <width>16</width>
									    <height>16</height>
								    </output>
								    <output>
									    <path>{name}24{ext}</path>
									    <format>png</format>
									    <width>24</width>
									    <height>24</height>
								    </output>
								    <output>
									    <path>{name}32{ext}</path>
									    <format>png</format>
									    <width>32</width>
									    <height>32</height>
								    </output>
								    <output>
									    <path>{name}48{ext}</path>
									    <format>png</format>
									    <width>48</width>
									    <height>48</height>
								    </output>
								    <output>
									    <path>{name}64{ext}</path>
									    <format>png</format>
									    <width>64</width>
									    <height>64</height>
								    </output>
								    <output>
									    <path>{name}96{ext}</path>
									    <format>png</format>
									    <width>96</width>
									    <height>96</height>
								    </output>
								    <output>
									    <path>{name}128{ext}</path>
									    <format>png</format>
									    <width>128</width>
									    <height>128</height>
								    </output>
								    <output>
									    <path>{name}256{ext}</path>
									    <format>png</format>
									    <width>256</width>
									    <height>256</height>
								    </output>
								    <output>
									    <path>{name}512{ext}</path>
									    <format>png</format>
									    <width>512</width>
									    <height>512</height>
								    </output>
							    </outputs>
						    </configuration>
					    </execution>
					    <execution>
						    <id>rasterize-effects</id>
						    <phase>process-resources</phase>
						    <goals>
							    <goal>rasterize-directory</goal>
						    </goals>
						    <configuration>
							    <inputDir>src/main/svg/effects</inputDir>
							    <destDir>src/main/resources/uk/co/bithatch/snake/ui/effects</destDir>
							    <outputs>
								    <output>
									    <path>{name}16{ext}</path>
									    <format>png</format>
									    <width>16</width>
									    <height>16</height>
								    </output>
								    <output>
									    <path>{name}24{ext}</path>
									    <format>png</format>
									    <width>24</width>
									    <height>24</height>
								    </output>
								    <output>
									    <path>{name}32{ext}</path>
									    <format>png</format>
									    <width>32</width>
									    <height>32</height>
								    </output>
								    <output>
									    <path>{name}48{ext}</path>
									    <format>png</format>
									    <width>48</width>
									    <height>48</height>
								    </output>
								    <output>
									    <path>{name}64{ext}</path>
									    <format>png</format>
									    <width>64</width>
									    <height>64</height>
								    </output>
								    <output>
									    <path>{name}96{ext}</path>
									    <format>png</format>
									    <width>96</width>
									    <height>96</height>
								    </output>
								    <output>
									    <path>{name}128{ext}</path>
									    <format>png</format>
									    <width>128</width>
									    <height>128</height>
								    </output>
								    <output>
									    <path>{name}256{ext}</path>
									    <format>png</format>
									    <width>256</width>
									    <height>256</height>
								    </output>
								    <output>
									    <path>{name}512{ext}</path>
									    <format>png</format>
									    <width>512</width>
									    <height>512</height>
								    </output>
							    </outputs>
						    </configuration>
					    </execution>
					    <execution>
						    <id>rasterize-icons</id>
						    <phase>process-resources</phase>
						    <goals>
							    <goal>rasterize-directory</goal>
						    </goals>
						    <configuration>
							    <inputDir>src/main/svg/icons</inputDir>
							    <destDir>src/main/resources/uk/co/bithatch/snake/ui/icons</destDir>
