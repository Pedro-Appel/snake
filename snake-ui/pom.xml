									<height>64</height>
								</output>
								<output>
									<path>{name}96{ext}</path>
									<format>png</format>
									<width>96</width>
									<height>96</height>
								</output>
								<output>
									<path>{name}128{ext}</path>
									<format>png</format>
									<width>128</width>
									<height>128</height>
								</output>
								<output>
									<path>{name}256{ext}</path>
									<format>png</format>
									<width>256</width>
									<height>256</height>
								</output>
								<output>
									<path>{name}512{ext}</path>
									<format>png</format>
									<width>512</width>
									<height>512</height>
								</output>
							</outputs>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>jitpack.io</id>
			<url>https://jitpack.io</url>
			<releases />
		</repository>
		<repository>
			<id>oss-snapshots</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
			<snapshots />
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>svg-rasterizer-maven-plugin-mvn-repo</id>
