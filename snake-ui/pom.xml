									<format>png</format>
									<width>256</width>
									<height>256</height>
								</output>
								<output>
									<path>{name}512{ext}</path>
									<format>png</format>
									<width>512</width>
									<height>512</height>
								</output>
							</outputs>
						</configuration>
					</execution>
					<execution>
						<id>rasterize-icons</id>
						<phase>process-resources</phase>
						<goals>
							<goal>rasterize-directory</goal>
						</goals>
						<configuration>
							<inputDir>src/main/svg/icons</inputDir>
							<destDir>src/main/resources/uk/co/bithatch/snake/ui/icons</destDir>
