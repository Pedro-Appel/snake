								    </output>
								    <output>
									    <path>{name}32{ext}</path>
									    <format>png</format>
									    <width>32</width>
									    <height>32</height>
								    </output>
								    <output>
									    <path>{name}48{ext}</path>
									    <format>png</format>
									    <width>48</width>
									    <height>48</height>
								    </output>
								    <output>
									    <path>{name}64{ext}</path>
									    <format>png</format>
									    <width>64</width>
									    <height>64</height>
								    </output>
								    <output>
									    <path>{name}96{ext}</path>
									    <format>png</format>
									    <width>96</width>
									    <height>96</height>
								    </output>
								    <output>
									    <path>{name}128{ext}</path>
									    <format>png</format>
									    <width>128</width>
									    <height>128</height>
								    </output>
								    <output>
									    <path>{name}256{ext}</path>
									    <format>png</format>
									    <width>256</width>
									    <height>256</height>
								    </output>
								    <output>
									    <path>{name}512{ext}</path>
									    <format>png</format>
									    <width>512</width>
									    <height>512</height>
								    </output>
							    </outputs>
						    </configuration>
					    </execution>
					    <execution>
						    <id>rasterize-regions</id>
						    <phase>process-resources</phase>
						    <goals>
							    <goal>rasterize-directory</goal>
						    </goals>
						    <configuration>
							    <inputDir>src/main/svg/regions</inputDir>
							    <destDir>src/main/resources/uk/co/bithatch/snake/ui/regions</destDir>
							    <outputs>
								    <output>
									    <path>{name}16{ext}</path>
									    <format>png</format>
